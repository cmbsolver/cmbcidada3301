<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LiberPrimusUi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LiberPrimusUi.Views.CalculateSectionSumsView"
             x:DataType="vm:CalculateSectionSumsViewModel">
    <StackPanel Margin="20" Spacing="10">
        <Button Command="{Binding CalculateStringCommand}">Calculate</Button>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="500">
            <TextBox Text="{Binding ReportString}"></TextBox>
        </ScrollViewer>
    </StackPanel>
</UserControl>
