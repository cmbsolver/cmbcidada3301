<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LiberPrimusUi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LiberPrimusUi.Views.InvertColorsView"
             x:DataType="vm:InvertColorsViewModel">
    <StackPanel Margin="20" Spacing="10">
        <StackPanel Orientation="Horizontal" Spacing="5">
            <TextBlock VerticalAlignment="Center">Pages</TextBlock>
            <ComboBox ItemsSource="{Binding LiberPages}" SelectedItem="{Binding SelectedLiberPage}"></ComboBox>
        </StackPanel>
        <Button Command="{Binding InvertColorsCommand}">Invert</Button>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="500">
            <ListBox ItemsSource="{Binding Messages}"></ListBox>
        </ScrollViewer>
    </StackPanel>
</UserControl>
